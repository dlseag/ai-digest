        }
        
        function getStatusLabel(status) {
            switch (status) {
                case 'running': return 'ç ”ç©¶ä¸­';
                case 'success': return 'å·²å®Œæˆ';
                case 'error': return 'å¤±è´¥';
                case 'cancelled': return 'å·²å–æ¶ˆ';
