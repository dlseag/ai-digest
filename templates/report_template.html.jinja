        }
        
        function enqueueDeepDiveTask(payload, itemTitle) {
            if (!DEEP_DIVE_ENABLED) {
                return;
            }
            const taskId = `task-${Date.now()}-${++deepDiveTaskCounter}`;
            const task = {
                id: taskId,
                title: itemTitle || 'æœªå‘½åæ¡ç›®',
                payload,
                status: 'running',
                startedAt: Date.now(),
                controller: new AbortController(),
                message: 'æ­£åœ¨æ·±åº¦ç ”ç©¶...',
            };
            deepDiveTasks.set(taskId, task);
            renderDeepDivePanel();
            runDeepDiveTask(task);
        }
        
        function runDeepDiveTask(task) {
            fetch(TRACKING_API, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(task.payload),
                signal: task.controller.signal,
            })
            .then(response => response.json())
            .then(result => handleDeepDiveResult(task, result))
            .catch(error => handleDeepDiveNetworkError(task, error));
        }
        
        function handleDeepDiveResult(task, result) {
            task.controller = null;
            task.finishedAt = Date.now();
            const deepDive = result.deep_dive;
            if (deepDive && deepDive.status === 'success') {
                task.status = 'success';
                task.message = 'ç ”ç©¶å®Œæˆ';
                task.result = {
                    markdown: deepDive.markdown || '',
                    reportPath: deepDive.report_path || '',
                    requestId: deepDive.request_id || result.request_id || '',
                };
            } else if (deepDive && deepDive.status === 'error') {
                recordTaskError(task, deepDive);
            } else {
                recordTaskError(task, {
                    message: 'æœåŠ¡å™¨è¿”å›äº†æ„å¤–çš„å“åº”æ ¼å¼',
                    hint: 'è¯·ç¨åé‡è¯•æˆ–æ£€æŸ¥æ—¥å¿—',
                });
            }
            renderDeepDivePanel();
        }
        
        function handleDeepDiveNetworkError(task, error) {
            if (error.name === 'AbortError') {
                task.status = 'cancelled';
                task.finishedAt = Date.now();
                task.message = 'å·²å–æ¶ˆ';
            } else {
                recordTaskError(task, {
                    message: 'è¯·æ±‚å¤±è´¥ï¼Œæ— æ³•è¿æ¥åˆ°ç ”ç©¶æœåŠ¡',
                    hint: error.message,
                });
