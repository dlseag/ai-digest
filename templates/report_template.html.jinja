            observer.observe(card);
        });
        
        // å‘é€è¿½è¸ªæ•°æ®çš„å‡½æ•°
        function trackBehavior(data) {
            return fetch(TRACKING_API, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    ...data,
                    timestamp: new Date().toISOString(),
                    user_agent: navigator.userAgent,
