            renderDeepDivePanel();
        }
        
        function recordTaskError(task, payload) {
            task.status = 'error';
            task.finishedAt = Date.now();
            task.error = {
                message: payload.message || 'å†…å®¹è§£æå¤±è´¥',
                hint: payload.hint || 'è¯·ç¨åé‡è¯•ï¼Œæˆ–æ£€æŸ¥è¿½è¸ªæœåŠ¡å™¨æ—¥å¿—',
                log_excerpt: payload.log_excerpt,
                log_path: payload.log_path,
                request_id: payload.request_id,
            };
            task.message = task.error.message;
        }
        
        function renderDeepDivePanel() {
            const tasks = Array.from(deepDiveTasks.values()).sort((a, b) => b.startedAt - a.startedAt);
