        function updateTaskElapsedLabels() {
            const now = Date.now();
            document.querySelectorAll('[data-task-elapsed]').forEach(el => {
                const start = Number(el.dataset.start || 0);
                const status = el.dataset.status;
                const end = status === 'running' ? now : Number(el.dataset.end || now);
                if (!start) return;
                el.textContent = formatElapsedValue(start, end);
